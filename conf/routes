# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /                    us.bleibinha.dorloch.controller.Application.index
GET        /project/:id         us.bleibinha.dorloch.controller.Application.project(id: Long)
GET        /task/:id            us.bleibinha.dorloch.controller.Application.task(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file        controllers.Assets.at(path="/public", file)
